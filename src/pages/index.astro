---
import Layout from '@/layouts/MainLayout.astro';
import Carousel from 'src/components/homePage/imgCarousel';
import NewStories from 'src/components/homePage/NewStories';

// (You may still have your slides array defined here for the carousel.)
const slides = [
  {
    image: '/images/image1.jpg',
    alt: 'Slide 1',
    heading: 'Slide 1 Heading',
    subheading: 'Slide 1 subheading',
  },
  {
    image: '/images/image2.jpg',
    alt: 'Slide 2',
    heading: 'Slide 2 Heading',
    subheading: 'Slide 2 subheading',
  },
  {
    image: '/images/image3.jpg',
    alt: 'Slide 3',
    heading: 'Slide 3 Heading',
    subheading: 'Slide 3 subheading',
  },
];
---

<Layout>
  <div
    class="content-container min-h-screen bg-gray-50 dark:bg-black text-gray-900 dark:text-gray-100"
  >
    <div class="flex flex-col md:flex-row gap-5 m-5">
      <!-- Left Column: New Stories & Sports Scores -->
      <div class="md:w-1/3 space-y-5">
        <!-- New Stories Container -->
        <div class="bg-white dark:bg-[#1a1a1a] shadow rounded p-4">
          <h2 class="text-xl font-semibold mb-4">New Stories</h2>
          <NewStories client:load />
        </div>
        <!-- Sports Scores Container -->
        <div class="bg-white dark:bg-[#1a1a1a] shadow rounded p-4">
          <h2 class="text-xl font-semibold mb-4">Sports Scores</h2>
          <ul class="space-y-3">
            <li
              class="p-2 border-b border-gray-200 dark:border-[#333] last:border-b-0"
            >
              Game 1: Team A 3 - 2 Team B
            </li>
            <li
              class="p-2 border-b border-gray-200 dark:border-[#333] last:border-b-0"
            >
              Game 2: Team C 1 - 1 Team D
            </li>
            <li
              class="p-2 border-b border-gray-200 dark:border-[#333] last:border-b-0"
            >
              Game 3: Team E 0 - 4 Team F
            </li>
            <li
              class="p-2 border-b border-gray-200 dark:border-[#333] last:border-b-0"
            >
              Game 4: Team G 2 - 2 Team H
            </li>
            <li class="p-2">Game 5: Team I 5 - 3 Team J</li>
          </ul>
        </div>
      </div>

      <!-- Right Column: Carousel -->
      <div class="md:w-2/3">
        <Carousel slides={slides} client:load />
      </div>
    </div>
  </div>
</Layout>
